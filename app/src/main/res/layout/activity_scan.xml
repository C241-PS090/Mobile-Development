<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_background"
    android:gravity="center"
    tools:context=".UI.Scan">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/diabetes" />

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:padding="20dp"
            android:src="@drawable/image_up"
            tools:srcCompat="@drawable/image_up"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="150dp"
                android:layout_height="57dp"
                android:text="Foto"
                android:textSize="30sp"
                android:id="@+id/ambil_foto"
                android:backgroundTint="@color/greenlight"
                android:fontFamily="@font/poppin_bold"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="57dp"
                android:text="Galeri"
                android:textSize="20sp"
                android:id="@+id/galeri"
                android:layout_marginStart="10dp"
                android:backgroundTint="@color/greenlight"
                android:fontFamily="@font/poppin_bold"/>

        </LinearLayout>

        <Button
            android:layout_width="302dp"
            android:layout_height="57dp"
            android:layout_marginTop="40dp"
            android:text="Unggah"
            android:padding="0dp"
            android:textSize="30sp"
            android:id="@+id/scan_button"
            android:backgroundTint="@color/greenlight"
            android:fontFamily="@font/poppin_bold"/>

    </LinearLayout>


</RelativeLayout>
